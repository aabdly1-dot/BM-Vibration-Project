# Define the assumed sample rate and the range of cutoff frequencies to test.
FS = 50.0  # Hz (Update this to your Movesense sensor's actual rate!)
ORDER = 4  # Filter order (keep consistent with highpass_filter.py)

# Define the range of cutoff frequencies (fc) to compare (e.g., 0.1 Hz to 1.5 Hz)
# The typical HAR gravity-removal filter is around 0.3 Hz.
CUTOFF_FREQS = [0.1, 0.3, 0.5, 1.0, 1.5] # Hz 
TEST_AXIS = 'accel_z' # Focus on one axis for clear visualization of gravity removal


# 3. Load and Prepare Noise Data
# ------------------------------------------------------------------------------
# NOTE: You MUST first place your noise data (e.g., UCI HAR walking data) 
# in the signal/01_data_collection/raw/noise_walking/ folder.

