try:
    # This simulates loading a segment of your UCI HAR 'total_acc_z_train' data
    # that has been isolated for a 'Walking' activity segment.
    # In reality, load your files from: ../01_data_collection/raw/noise_walking/
    raw_data_path = '../01_data_collection/raw/noise_walking/walking_segment_sample.csv'
    # For this example, we create dummy data simulating raw total acceleration (gravity + walking)
    
    # Simulating 10 seconds of data at 50Hz (500 samples)
    time = np.linspace(0, 10, int(FS * 10), endpoint=False)
    # 9.81 m/s^2 gravity offset + 0.3 Hz walking motion
    simulated_raw = 9.81 + 0.5 * np.sin(2 * np.pi * 0.3 * time) + 2 * np.sin(2 * np.pi * 70 * time)
    df_raw = pd.DataFrame({
        'time_s': time,
        'accel_z': simulated_raw
    })
    
    # Rename column to match TEST_AXIS
    df_raw = df_raw.rename(columns={'accel_z': TEST_AXIS})
    
except Exception as e:
    print(f"Failed to load data: {e}. Using dummy data instead.")
    # (The dummy data creation above is used as fallback)

print(f"Data Loaded: {len(df_raw)} samples. Raw Mean: {df_raw[TEST_AXIS].mean():.2f}")


# 4. Filter Testing and Visualization
# ------------------------------------------------------------------------------

# --- A. Visualize the Raw Data ---
plt.figure(figsize=(14, 4))
plt.plot(df_raw['time_s'], df_raw[TEST_AXIS], label='Raw Data (Contains Gravity + Walking + Vibration)', color='gray', linewidth=0.8)
plt.axhline(y=0, color='r', linestyle='--', alpha=0.5)
plt.title(f"1. Raw Accelerometer Data (Showing Gravity Offset and Noise)")
plt.xlabel("Time (s)")
plt.ylabel("Acceleration (m/sÂ²)")
plt.legend()
plt.show()

# --- B. Test Multiple Cutoff Frequencies ---
fig, axes = plt.subplots(len(CUTOFF_FREQS), 1, figsize=(14, 15), sharex=True)
fig.suptitle(f'2. High-Pass Filter Comparison (Order={ORDER})', fontsize=16, y=0.92)

for i, fc in enumerate(CUTOFF_FREQS):
    # Apply the filter function to the data
    filtered_data = butter_highpass_filter(df_raw[TEST_AXIS].values, cutoff=fc, fs=FS, order=ORDER)
    
    # Plotting
    axes[i].plot(df_raw['time_s'], filtered_data, linewidth=1.5, label=f'Filtered (fc={fc} Hz)')
    axes[i].axhline(y=0, color='red', linestyle='--', alpha=0.7)
    
    # Calculate key metrics
    mean_filtered = np.mean(filtered_data)
