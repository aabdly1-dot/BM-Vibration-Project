# Set up environment path to import the highpass_filter functions
sys.path.append(os.path.abspath(os.path.join(os.getcwd(), '..', 'scripts')))
from highpass_filter import butter_highpass_filter, FS, ORDER 


# 2. Define Project Constants and Test Parameters
# ------------------------------------------------------------------------------
# NOTE: FS and ORDER are imported from highpass_filter.py but can be overridden here for tests.

# Define the set of cutoff frequencies (fc) to test. 
# HAR literature suggests gravity removal often uses fc < 1 Hz.
TEST_CUTOFF_FREQS = [0.1, 0.3, 0.5, 0.75, 1.0, 1.5] # Hz 
TEST_NOISE_TYPE = 'noise_walking' # Focus on a key noise source for testing


# 3. Data Loading
# ------------------------------------------------------------------------------
def load_noise_data(noise_type):
    """
    Loads raw triaxial accelerometer data for a specific noise activity.
    In a real project, this loads the raw files you placed in 01_data_collection/raw/.
    """
    print(f"Loading raw data for: {noise_type}...")
    
    # --- SIMULATION: Replace this block with your actual file loading logic ---
    # Load your UCI HAR 'total_acc_x/y/z_train' filtered by 'WALKING' label.
    
    N_samples = 2500 # Simulate 50 seconds of data at 50Hz
    time = np.linspace(0, N_samples / FS, N_samples, endpoint=False)
    
    # Simulate signal: Gravity (9.81) + Walking Motion (Low Freq, 0.5 Hz)
    raw_z = 9.81 + 0.8 * np.sin(2 * np.pi * 0.5 * time) + 0.5 * np.sin(2 * np.pi * 0.2 * time)
    raw_x = 0.5 * np.sin(2 * np.pi * 0.4 * time) # Lateral sway during walking
    
    df_raw = pd.DataFrame({
        'time_s': time,
        'accel_x': raw_x,
        'accel_y': np.zeros(N_samples), # Y-axis often less affected by walking
        'accel_z': raw_z
    })
    # --- END SIMULATION BLOCK ---
    
    print(f"Loaded {len(df_raw)} samples. Raw Z Mean: {df_raw['accel_z'].mean():.2f}")
    return df_raw


# 4. Filter Experimentation and Visualization
# ------------------------------------------------------------------------------

# Load the noise data once
df_noise = load_noise_data(TEST_NOISE_TYPE)
TEST_AXIS = 'accel_z' # Focus on the axis most aligned with gravity for initial testing

# Create visualization figure
n_tests = len(TEST_CUTOFF_FREQS)
fig, axes = plt.subplots(n_tests, 1, figsize=(15, 4 * n_tests), sharex=True)
fig.suptitle(f'High-Pass Filter Cutoff Optimization (Data: {TEST_NOISE_TYPE}, Order={ORDER})', fontsize=16)

for i, fc in enumerate(TEST_CUTOFF_FREQS):
    # Apply the filter function from highpass_filter.py
    # Use the raw NumPy array for the filter function
    raw_data_np = df_noise[TEST_AXIS].values
    filtered_data = butter_highpass_filter(raw_data_np, cutoff=fc, fs=FS, order=ORDER)
    
    # Calculate Key Metrics for the plot title
    mean_filtered = np.mean(filtered_data)
    std_filtered = np.std(filtered_data)
    
    # Plotting: Compare the filtered signal to the zero line
    axes[i].plot(df_noise['time_s'], filtered_data, linewidth=1.5, label=f'Filtered (fc={fc} Hz)', color='blue')
    axes[i].axhline(y=0, color='red', linestyle='--', alpha=0.7)
    
    axes[i].set_title(f'Cutoff: {fc} Hz | Mean: {mean_filtered:.3f} | Std Dev: {std_filtered:.2f} | Result: {"PASS" if abs(mean_filtered) < 0.1 else "FAIL"}')
    axes[i].set_ylabel("Accel (m/sÂ²)")
    axes[i].grid(True)
    axes[i].legend(loc='upper right')

plt.xlabel("Time (s)")
plt.tight_layout(rect=[0, 0, 1, 0.95])
plt.show()


